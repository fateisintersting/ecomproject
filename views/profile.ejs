<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>User Profile</title>
    <link rel="stylesheet" href="/style/home.css">
    <link rel="stylesheet" href="/style/profile.css">
</head>
<body>
    <nav>
        <ul>
            <li class="logo"><a href="/home">SHOPNOW</a></li>
            <li><input type="text" id="search-bar" placeholder="Search..." oninput="searchProducts()"></li>
            <li class="profile">
                <a><i class="fa-regular fa-user"></i></a>
                <ul>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </li>
            <li class="cart"><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>
            <li class="shiping"> <a href="/shipping"><i class="fa-solid fa-truck-fast"></i> </a></li>
            <li class="shiping"> <a href="/checkout"><i class="fa-solid fa-money-bill"></i> </a></li>
        </ul>
    </nav>
    <div class="container">
        <h1>User Profile</h1>
        <% if (user) { %>
            <div class="profile-info">
                <p><label>ID:</label> <%= user.id %></p>
                <p><label>First Name:</label> <%= user.firstname %></p>
                <p><label>Last Name:</label> <%= user.lastname %></p>
                <p><label>Email (Gmail):</label> <%= user.email %></p>
            </div>
        <% } else { %>
            <p><%= message %></p>
        <% } %>
    </div>

    <dialog id="updateModal">
        <form id="updateForm" action="/update-profile" method="post">
            <label for="firstname">First Name:</label>
            <input type="text" id="firstname" name="firstname" required><br><br>
            <label for="lastname">Last Name:</label>
            <input type="text" id="lastname" name="lastname" required><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <input type="submit" value="Update">
        </form>
    </dialog>

    <button id="updateBtn" class="btn">Update Profile</button>

    <script>
        var updateModal = document.getElementById('updateModal');
        var updateBtn = document.getElementById('updateBtn');

        updateBtn.onclick = function() {
            updateModal.showModal();
        };

        updateModal.addEventListener('close', function() {
            // Clear form fields when the dialog is closed
            document.getElementById('updateForm').reset();
        });
    </script>
</body>
</html>
</body>
</html>
